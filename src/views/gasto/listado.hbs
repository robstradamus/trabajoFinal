<div class="row">
    {{> navigation}}
    
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">Listado de Gastos</h1>
            <a href="/gasto/registrar" class="btn btn-primary btn-sm"> Nuevo Gasto</a>
        </div>
        {{#if varMensaje}}
        <div class="alert alert-{{varEstiloMensaje}} alert-dismissible fade show" role="alert">
            <ul class="mb-0 list-unstyled">
                {{#each varMensaje}}
                <li>{{this.msg}}</li>
                {{/each}}
            </ul>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
        {{/if}}
        <div class="card mb-4">
            <div class="card-body">
                <form action="/gasto/listado" method="GET" class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Buscar</label>
                        <input type="text" class="form-control" name="busqueda" placeholder="Buscar en descripción..." value="{{filtros.busqueda}}">
                    <div class="col-md-4">
                        <label class="form-label">Tipo de Gasto</label>
                        <select class="form-select" name="tipoGasto">
                            <option value="">Todos los tipos</option>
                            <option value="SUELDOS" {{#if (eq filtros.tipoGasto 'SUELDOS')}}selected{{/if}}>Sueldos</option>
                            <option value="SERVICIOS" {{#if (eq filtros.tipoGasto 'SERVICIOS')}}selected{{/if}}>Servicios</option>
                            <option value="MANTENIMIENTO" {{#if (eq filtros.tipoGasto 'MANTENIMIENTO')}}selected{{/if}}>Mantenimiento</option>
                            <option value="LIMPIEZA" {{#if (eq filtros.tipoGasto 'LIMPIEZA')}}selected{{/if}}>Limpieza</option>
                            <option value="OTROS" {{#if (eq filtros.tipoGasto 'OTROS')}}selected{{/if}}>Otros</option>
                        </select>
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">Buscar</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="card shadow-sm">
            <div class="card-body">
                {{#if paramGasto.length}}
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Fecha</th>
                                <th>Tipo</th>
                                <th>Descripción</th>
                                <th>Monto</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each paramGasto}}
                            <tr>
                                <td>{{this.fecha}}</td>
                                <td>
                                    <span class="badge bg-secondary">{{this.tipoGasto}}</span>
                                </td>
                                <td>{{this.descripcion}}</td>
                                <td><strong>$ {{this.monto}}</strong></td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
                {{else}}
                <div class="text-center py-4">
                    <i class="fas fa-receipt fa-2x text-muted mb-3"></i>
                    <h5 class="text-muted">No hay gastos registrados</h5>
                    <a href="/gasto/registrar" class="btn btn-primary mt-2">Registrar Gasto</a>
                </div>
                {{/if}}
            </div>
        </div>
    </main>
</div>