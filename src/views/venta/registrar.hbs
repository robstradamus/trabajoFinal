<div class="row">
    {{> navigation}}

    <!-- AGREGAR PRODUCTO -->
    <div class="modal fade" id="modalProducto" tabindex="-1">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title">Agregar Producto Manualmente</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                    <div class="row g-3">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Nombre del Producto</label>
                            <input type="text" class="form-control" id="nombre" name="nombre" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Tipo de Producto</label>
                            <select class="form-select" name="tipoProducto" required>
                                <option value="">Seleccione un tipo</option>
                                <option value="Almacen">Almacén</option>
                                <option value="Carniceria">Carnicería</option>
                            </select>
                        </div>
                    </div>

                    <div class="row g-3">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Código de Barras</label>
                            <div class="input-group">
                                <input type="text" class="form-control" id="codBarra" name="codBarra" value="{{producto.cod_barra}}" required>
                                <button type="button" class="btn btn-outline-secondary" onclick="focusScanner()"></button>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Proveedor</label>
                            <select class="form-select" name="idProveedor" id="idProveedor" required>
                                <option value="">Seleccione un proveedor</option>
                                {{#each paramProveedores}}  
                                <option value="{{this.id_proveedor}}">{{this.nombre}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                    <div class="row g-3">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Precio Unitario - Kg</label>
                            <input type="number" step="0.01" class="form-control" id="precioUnitario" name="precioUnitario" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Stock Inicial </label>
                            <input type="number" class="form-control" id="stock" name="stock" value="0" required>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Observaciones</label>
                        <textarea class="form-control" id="descripcion" name="descripcion" rows="3" maxlength="100"></textarea>
                    </div>

                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button class="btn btn-primary" id="btnAgregarDesdeModal">
                    Agregar a la Venta
                    </button>
                </div>
            </div>
        </div>
    </div>

    
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">Registrar Venta</h1>
            <div>
                <a href="/cuentas-corrientes/listado" class="btn btn-warning btn-sm me-2">Cuentas Corrientes</a>
                <a href="/venta/listado" class="btn btn-success btn-sm">Listado de Ventas </a>
            </div>
        </div>
        {{#if varMensaje}}
        <div class="alert alert-{{varEstiloMensaje}} alert-dismissible fade show" role="alert">
            <ul class="mb-0 list-unstyled">
                {{#each varMensaje}}
                <li>{{this.msg}}</li>
                {{/each}}
            </ul>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
        {{/if}}

        <div class="card shadow-sm">
            <div class="card-header bg-dark text-white">
                <h5 class="card-title mb-0">Registrar Nueva Venta</h5>
            </div>
            <div class="card-body">
                <form id='formVenta' action="/venta/registrar" method="POST" name="formVenta">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label class="form-label">Cliente</label>
                            <select class="form-select" arial-label='Cliente' name="id_cliente" id="id_cliente">
                                <option value="">Seleccione cliente</option>
                                {{#each paramCliente}}
                                    <option value="{{this.id_cliente}}">{{this.nombre}} - DNI: {{this.dni}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Tipo de Pago</label>
                            <select class="form-select" name="tipo_pago" required>
                                <option value="EFECTIVO">Efectivo</option>
                                <option value="TRANSFERENCIA">Transferencia</option>
                                <option value="TARJETA">Tarjeta Debito/Credito</option>
                                <option value="CORRIENTE">Cuenta Corriente</option> 
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Fecha de Venta</label>
                            <input type="date" class="form-control" name="fecha" value="{{fechaActual}}" required>
                        </div>
                    </div>
                    <div class="mb-4"> 
                        <label class="form-label">Escanear Codigo de Barras</label>
                        <div class="input-group">
                            <input type="text" id="scanInput" class="form-control" autofocus>
                            <button type="button" class="btn btn-outline-secondary" onclick="focusScanner()" title="Hacer clic aquí para escanear"></button>
                        </div>
                        <small class="form-text text-muted">Escanee el codigo de barras del producto</small>
                    </div>
                    <hr>
                    <div class="mb-4">
                        <label class="form-label">Listado de Prouctos</label>
                        <div class="table-responsive">
                            <table class="table table-bordered" id="tablaProductos">
                                <thead class="table-light">
                                    <tr>
                                        <th scope="col">Productos</th>
                                        <th scope="col" width="120">Cantidad / KG</th>
                                        <th scope="col" width="150">Precio Unitario</th>
                                        <th scope="col" width="150">Subtotal</th>
                                        <th scope="col" width="80">Acción</th>
                                    </tr>
                                </thead>
                                <tbody id="tbodyProductos"></tbody>
                                <tfoot>
                                    <tr class="table-active">
                                        <td colspan="3" class="text-end"><strong>Total:</strong></td>
                                        <td><strong><span id="totalVenta">0.00</span></strong></td>
                                        <td></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                        <input type="hidden" name="total" id="totalHidden" value="0">
                    </div>
                    <hr>
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label class="form-label">Total a Pagar</label>
                            <input type="number" step="0.01" class="form-control bg-light" name="total_display" id="totalInput" value="0" readonly>
                        </div>
                    </div>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <button type="button" id="agregarProducto" class="btn btn-outline-primary me-md-2">
                            Agregar Producto Manualmente
                        </button>
                        <a href="/venta/listado" class="btn btn-outline-secondary me-md-2">Cancelar</a>
                        <button class="btn btn-primary" type="submit">Registrar Venta</button>
                    </div>
                </form>
            </div>
        </div>
    </main>
</div>

{{#section "scripts"}}
<script src="/js/venta.js"></script>
{{/section}}
