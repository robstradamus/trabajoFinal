<div class="row">
    {{> navigation}}
    
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">Registrar Venta</h1>
            <a href="/venta/listado" class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-arrow-left"></i> Volver a Ventas
            </a>
        </div>
        {{#if varMensaje}}
        <div class="alert alert-{{varEstiloMensaje}} alert-dismissible fade show" role="alert">
            <ul class="mb-0 list-unstyled">
                {{#each varMensaje}}
                <li>{{this.msg}}</li>
                {{/each}}
            </ul>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
        {{/if}}

        <div class="card shadow-sm">
            <div class="card-header bg-dark text-white">
                <h5 class="card-title mb-0">Registrar Nueva Venta</h5>
            </div>
            <div class="card-body">
                <form id='formVenta' action="/venta/registrar" method="POST">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label class="form-label">Cliente</label>
                            <select class="form-select" name="id_cliente">
                                <option value="">Seleccione cliente</option>
                                {{#each clientes}}
                                <option value="{{this.id_cliente}}">{{this.nombre}} - DNI: {{this.dni}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Fecha de Venta</label>
                            <input type="date" class="form-control" name="fecha" value="{{fechaActual}}" required>
                        </div>
                    </div>
                    <div class="mb-4"> 
                        <label class="form-label">Escanear Codigo de Barras</label>
                        <div class="input-group">
                            <input type="text" id="scanInput" class="form-control" autofocus>
                            <button type="button" class="btn btn-outline-secondary" onclick="focusScanner()" title="Hacer clic aquí para escanear">
                                <i class="fas fa-barcode"></i>
                            </button>
                        </div>
                        <small class="form-text text-muted">Escanee el codigo de barras del producto</small>
                    </div>
                    <hr>
                    <div class="mb-4">
                        <label class="form-label">Productos en la Venta</label>
                        <div class="table-responsive">
                            <table class="table table-bordered" id="tablaProductos">
                                <thead class="table-light">
                                    <tr>
                                        <th scope="col">Producto</th>
                                        <th scope="col" width="120">Cantidad</th>
                                        <th scope="col" width="150">Precio Unitario</th>
                                        <th scope="col" width="150">Subtotal</th>
                                        <th scope="col" width="80">Acción</th>
                                    </tr>
                                </thead>
                                <tbody id="tbodyProductos">
                                </tbody>
                                <tfoot>
                                    <tr class="table-active">
                                        <td colspan="3" class="text-end"><strong>Total:</strong></td>
                                        <td><strong><span id="totalVenta">0.00</span></strong></td>
                                        <td></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                        <input type="hidden" name="total" id="totalHidden" value="0">
                    </div>
                    <hr>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label class="form-label">Tipo de Pago</label>
                            <select class="form-select" name="tipo_pago" required>
                                <option value="CONTADO">Pago Contado</option>
                                <option value="CORRIENTE">Cuenta Corriente</option> 
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Total a Pagar</label>
                            <input type="number" step="0.01" class="form-control bg-light" name="total_display" id="totalInput" value="0" readonly>
                        </div>
                    </div>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <button type="button" id="agregarProducto" class="btn btn-outline-primary me-md-2">
                            <i class="fas fa-plus"></i> Agregar Producto Manualmente
                        </button>
                        <a href="/venta/listado" class="btn btn-outline-secondary me-md-2">Cancelar</a>
                        <button class="btn btn-primary" type="submit">Registrar Venta</button>
                    </div>
                </form>
            </div>
        </div>
    </main>
</div>

<script src="/js/venta.js"></script>
