<div class="row">
    {{> navigation}}
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">Ventas</h1>
            <div>
                <a href="/cuentas-corrientes" class="btn btn-warning btn-sm me-2">Cuentas Corrientes</a>
                <a href="/venta/registrar" class="btn btn-success btn-sm">Nueva Venta</a>
            </div>

        </div>
        {{#if varMensaje}}
        <div class="alert alert-{{varEstiloMensaje}} alert-dismissible fade show" role="alert">
            <ul class="mb-0 list-unstyled">
                {{#each varMensaje}}
                <li>{{this.msg}}</li>
                {{/each}}
            </ul>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>

        {{/if}}
        <div class="card shadow-sm">
            <div class="card-header bg-dark text-white">
                <h5 class="card-title mb-0">Historial de Ventas</h5>
            </div>

            <div class="card-body">
                <div class="table-responsive"> 
                    <table id="tablaVentas" class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>ID Venta</th>
                                <th>Fecha</th>
                                <th>Cliente</th>
                                <th>Total</th>
                                <th>Saldo Pendiente</th>
                                <th>Estado</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each paramListadoVentas}}
                            <tr>
                                <td>#{{this.id_venta}}</td>
                                <td>{{this.fecha}}</td>
                                <td>{{this.cliente_nombre}}</td>
                                <td>${{this.total}}</td>
                                <td>${{this.saldo_pendiente}}</td>
                                <td>
                                    {{#if (eq this.saldo_pendiente 0)}}
                                    <span class="badge bg-success">Pagado</span>
                                    {{else}}
                                    <span class="badge bg-warning">Pendiente</span>
                                    {{/if}}
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="/venta/detalle/{{this.id_venta}}" class="btn btn-info">Ver</a>
                                        <a href="/pago/registrar/{{this.id_venta}}" class="btn btn-success">Pagar</a>
                                    </div>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>
</div>
<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script> 
<script type="text/javascript" src="https://cdn.datatables.net/v/bs5/dt-2.0.8/datatables.min.js"></script>
<script src="/js/venta.js"></script>