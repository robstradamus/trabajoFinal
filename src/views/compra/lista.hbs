<div class="row">
    {{> navigation}}
    
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 mb-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">Compras</h1>
            <a href="/compra/registrar" class="btn btn-success btn-sm">Registrar Compra</a>
        </div>

        {{#if varMensaje}}
        <div class="alert alert-{{varEstiloMensaje}} alert-dismissible fade show" role="alert">
            <ul class="mb-0 list-unstyled">
                {{#each varMensaje}}
                <li>{{this.msg}}</li>
                {{/each}}
            </ul>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
        {{/if}}

        <div class="card shadow-sm">
            <div class="card-header bg-dark text-white">
                <h5 class="card-title mb-0">Lista de Compras </h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <button class="btn btn-outline-secondary w-100" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFiltros" aria-expanded="false" aria-controls="collapseFiltros">
                        <i class="bi bi-funnel"></i> Mostrar/Ocultar Filtros
                    </button>
                </div>
                <div class="collapse" id="collapseFiltros">
                    <div class="card card-body mb-3 shadow-sm">
                        <div class="row">
                            <div class="col-md-4">
                                <label for="minDate" class="form-label">Fecha Mínima:</label>
                                <input type="date" id="minDate" class="form-control">
                            </div>
                            <div class="col-md-4">
                                <label for="maxDate" class="form-label">Fecha Máxima:</label>
                                <input type="date" id="maxDate" class="form-control">
                            </div>
                            <div class="col-md-4 d-flex align-items-end">
                                <button id="clearDateFilter" class="btn btn-outline-secondary w-100">Limpiar Filtro</button>
                            </div>
                        </div>
                    </div>
                </div>
                <hr>
                <div class="table-responsive"> 
                    <table id="tablaCompras" class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Proveedor</th>
                                <th>Fecha</th>
                                <th>Total</th>
                                <th>Saldo Pendiente</th>
                                <th>Detalle</th>
                                <th>Pagos</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each paramListadoCompras}}
                            <tr>
                                <td>{{this.id_compra}}</td>
                                <td>{{this.nombre_proveedor}}</td>
                                <td>{{this.fecha}}</td>
                                <td>${{this.total}}</td>
                                <td><span class="badge bg-{{#if (eq this.saldo_pendiente 0)}}success{{else}}danger{{/if}}">${{this.saldo_pendiente}}</span></td>
                                <td>
                                    <a href="/compra/detalle/{{this.id_compra}}" class="btn btn-sm btn-primary">Ver Detalle</a>
                                </td>
                                <td>
                                    <a href="/compra/pagos/{{this.id_compra}}" class="btn btn-sm btn-warning">Ver Pagos</a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>
</div>
<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script> 
<script type="text/javascript" src="https://cdn.datatables.net/v/bs5/dt-2.0.8/datatables.min.js"></script>
<script>
    let tabla;

    $(document).ready(function() {
        tabla = $('#tablaCompras').DataTable({
            "language": {
                "lengthMenu": "Mostrar _MENU_ registros por página",
                "zeroRecords": "No se encontraron resultados",
                "info": "Mostrando página _PAGE_ de _PAGES_",
                "infoEmpty": "No hay registros disponibl    es",
                "infoFiltered": "(filtrado de un total de _MAX_ registros)",
                "search": "Buscar:",
                "paginate": {
                    "first": "Primero",
                    "last": "Último",
                    "next": "Siguiente",
                    "previous": "Anterior"
                },
            },
            "columnDefs": [
                { "type": "date", "targets": 2 } 
            ]
        });

        // 2. Función de Filtro Personalizado (Rango de Fechas)
        $.fn.dataTable.ext.search.push(
            function (settings, data, dataIndex) {
                console.log('Filtro Ejecutado. Columna [2]: ', data[2]);
                const min = $('#minDate').val();
                const max = $('#maxDate').val();
                const date = data[2]; 

                let dateInRange = true;
                
                if (min) {
                    if (date < min) {
                        dateInRange = false;
                    }
                }
                
                if (max) {
                    if (date > max) {
                        dateInRange = false;
                    }
                }

                return dateInRange;
            }
        );

        $('#minDate, #maxDate').on('change', function () {
            tabla.draw(); 
        });

        $('#clearDateFilter').on('click', function () {
            $('#minDate').val('');
            $('#maxDate').val('');
            tabla.draw();
        });
    });
</script>