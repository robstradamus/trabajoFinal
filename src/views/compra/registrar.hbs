<!-- AGREGAR PRODUCTO -->
<div class="modal fade" id="modalProducto" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
        <div class="modal-header bg-dark text-white">
            <h5 class="modal-title">Agregar Producto Manualmente</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
                <div class="row g-3">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Nombre del Producto</label>
                        <input type="text" class="form-control" id="nombre" name="nombre" required>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Tipo de Producto</label>
                        <select class="form-select" name="tipoProducto" required>
                            <option value="">Seleccione un tipo</option>
                            <option value="Almacen">Almacén</option>
                            <option value="Carniceria">Carnicería</option>
                        </select>
                    </div>
                </div>

                <div class="row g-3">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Código de Barras</label>
                        <div class="input-group">
                            <input type="text" class="form-control" id="codBarra" name="codBarra" value="{{producto.cod_barra}}" required>
                            <button type="button" class="btn btn-outline-secondary" onclick="focusScanner()"></button>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Proveedor</label>
                        <select class="form-select" name="idProveedor" id="idProveedor" required>
                            <option value="">Seleccione un proveedor</option>
                            {{#each paramProveedor}}  
                            <option value="{{this.id_proveedor}}">{{this.nombre}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>
                <div class="row g-3">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Precio Unitario - Kg</label>
                        <input type="number" step="0.01" class="form-control" id="precioUnitario" name="precioUnitario" required>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Stock Inicial </label>
                        <input type="number" class="form-control" id="stock" name="stock" value="0" required>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Observaciones</label>
                    <textarea class="form-control" id="descripcion" name="descripcion" rows="3" maxlength="100"></textarea>
                </div>

            </div>

            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button class="btn btn-primary" id="btnAgregarDesdeModal">
                Agregar a la Venta
                </button>
            </div>
        </div>
    </div>
</div>

<div class="row">
    {{> navigation}}
    
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">Registrar Compra</h1>
            <a href="/compra/lista" class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-arrow-left"></i> Volver a Compras
            </a>
        </div>

        {{#if varMensaje}}
        <div class="alert alert-{{varEstiloMensaje}} alert-dismissible fade show" role="alert">
            <ul class="mb-0 list-unstyled">
                {{#each varMensaje}}
                <li>{{this.msg}}</li>
                {{/each}}
            </ul>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
        {{/if}}

        <div class="row justify-content-center m-4">
            <div class="col-md-10 col-lg-9">
                <div class="card shadow-sm">
                    <div class="card-header bg-dark text-white">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-person-plus"></i> Nueva Compra
                        </h5>
                    </div>
                    <div class="card-body">
                        <form id='formRegistro' action="/compra/registrar" method="POST">
                            <div class="mb-3"> 
                                <label class="form-label">Proveedor</label>
                                <select class="form-select" arial-label='Proveedor' name="proveedor" id="proveedor">
                                    <option value=""></option>
                                    {{#each paramProveedor}}
                                        <option value="{{this.id_proveedor}}">{{this.nombre}}</option>
                                    {{/each}}
                                </select>
                            </div>
                            <div class="mb-3"> 
                                <label class="form-label">Fecha</label>
                                <input type="date" class="form-control" id="fecha" name="fecha" required>
                            </div>

                            <hr>

                            <!-- Detalles de productos -->
                            <h5>Productos</h5>
                            <table class="table" id="tablaProductos">
                                <thead>
                                <tr>
                                    <th scope="col">Producto</th>
                                    <th scope="col">Cantidad</th>
                                    <th scope="col">Precio Unitario</th>
                                    <th scope="col">Subtotal</th>
                                    <th scope="col"></th>
                                </tr>
                                </thead>
                                <tbody></tbody>
                            </table>

                            <button type="button" class="btn btn-secondary" id="agregarProducto">Agregar producto</button>
                            <button type="button" id="agregarProductoManual" class="btn btn-outline-primary me-md-2">
                                Agregar Nuevo Producto 
                            </button>

                            <hr>
                            <div class="mb-3">
                                <label>Total:</label>
                                <input type="number" step="0.01" name="total" id="total" class="form-control" readonly>
                            </div>

                            <div class="d-grid gap-2">
                                <button class="btn btn-primary" type="submit">
                                    <i class="bi bi-check-circle"></i> Registrar Compra
                                </button>
                                <a href="/proveedor/listado" class="btn btn-outline-secondary">Cancelar</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>
