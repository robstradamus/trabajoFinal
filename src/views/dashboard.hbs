<div class="row">
    {{> navigation}}
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <div
            class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">Inicio</h1>
            <div class="btn-toolbar mb-2 mb-md-0">
                <a href="/venta/registrar" class="btn btn-sm btn-primary">Nueva Venta</a>
            </div>
        </div>
        <div class="row mb-4">
            <div class="col-md-4 mb-3">
                <div class="card text-white bg-primary">
                    <div class="card-body">
                        <h5 class="card-title">Saldo Total (Hoy)</h5>
                        <h2 class="card-text">{{formatMoney totalDia}}</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card text-white bg-success"> 
                    <div class="card-body">
                        <h5 class="card-title">Total Carnicería</h5>
                        <h2 class="card-text">{{formatMoney totalesPorSector.carniceria}}</h2>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-3">
                <div class="card text-white bg-warning">
                    <div class="card-body">
                        <h5 class="card-title">Total Almacén</h5>
                        <h2 class="card-text">{{formatMoney totalesPorSector.almacen}}</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Ultimas Ventas</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Venta</th>
                                        <th>Fecha</th>
                                        <th>Cliente</th>
                                        <th class="text-end">Total</th>
                                        <th class="text-center">Estado</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each ultimasVentas}}
                                    <tr>
                                        <td>#{{this.id_venta}}</td>
                                        <td>{{this.fecha}}</td>
                                        <td>
                                            {{#if this.Cliente.nombre}}
                                            {{else}}
                                            <span class="badge bg-primary">Consumidor Final</span>
                                            {{/if}}
                                        </td>
                                        <td class="text-end">{{formatMoney this.total}}</td>
                                        <td class="text-center">
                                            {{#if this.saldo_pendiente}}
                                            <span class="badge bg-warning">Pendiente</span>
                                            {{else}}
                                            <span class="badge bg-success">Completada</span>
                                            {{/if}}
                                        </td>
                                    </tr>
                                    {{else}}
                                    <tr>
                                        <td colspan="5" class="text-center">No hay ventas registradas hoy.</td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Productos con Bajo Stock</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-sm table-hover align-center">
                                <thead>
                                    <tr>
                                        <th>Producto</th>
                                        <th class="text-end">Stock</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each bajoStock}}
                                    <tr class="table-danger">
                                        <td>{{this.nombre}}</td>
                                        <td class="text-end fw-bold">{{this.stock}}</td>
                                    </tr>
                                    {{else}}
                                    <tr>
                                        <td colspan="2" class="text-center">No hay productos con bajo stock.</td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>