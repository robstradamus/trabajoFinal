{{#if varMensaje}}
<div class="position-fixed" style="z-index: 0; margin-top: 80px;">
    <div class="d-flex justify-content-center">
        <div class="alert alert-{{varEstiloMensaje}} shadow text-center position-fixed top-0 start-50 translate-middle-x" 
            style="min-width: 300px; max-width: 600px; backdrop-filter: blur(6px); background-color: rgba(255,255,255,0.9); margin-top: 80px;">
        <ul class="mb-0 list-unstyled">
            {{#each varMensaje}}
            <li>{{this.msg}}</li>
            {{/each}}
        </ul>
        </div>
    </div>
</div>
{{/if}}
<main class="form-signin w-100 m-auto">
    <div class="d-flex justify-content-center align-items-center vh-100">
        <div class="card shadow p-4" style="width: 350px;">
            <h3 class="text-center mb-4">Modificar Proveedor</h3>
            <form id='formRegistro' action="/proveedor/modificar/{{paramProveedor.id_proveedor}}" method="POST">
                <div class="mb-3"> 
                    <label class="form-label">Nombre</label>
                    <input type="text" class="form-control" id="nombre" name="nombre" value="{{paramProveedor.nombre}}">
                </div>
                <div class="mb-3"> 
                    <label class="form-label">Tipo de Rubro</label>
                    <select class="form-select" aria-label="Default select example", name="tipoRubro">
                        <option selected>Seleccione un Rubro</option>
                        <option value="Carniceria" {{#if (eq paramProveedor.tipo_rubro "Carniceria")}} selected {{/if}}>Carniceria</option>
                        <option value="Almacen" {{#if (eq paramProveedor.tipo_rubro "Almacen")}} selected {{/if}}>Almacen</option>
                    </select>
                </div>
                <div class="mb-3"> 
                    <label class="form-label">NÃºmero Telefono</label>
                    <input type="text" class="form-control" id="numTel" name="numTel" value="{{paramProveedor.num_tel}}">
                </div>
                <div class="mb-3"> 
                    <label class="form-label">Tipo de Producto</label>
                    <input type="text" class="form-control" id="tipoProducto" name="tipoProducto" value="{{paramProveedor.tipo_producto}}">
                </div>
                <div class="mb-3"> 
                    <label class="form-label">Observaciones</label>
                    <input type="text" class="form-control" id="observaciones" name="observaciones" value="{{paramProveedor.observaciones}}">
                </div>
                <button class="btn btn-primary w-100 py-2" type="submit" style="text-align: center;">Modificar</button>
            </form>
        </div>
    </div>
</main>